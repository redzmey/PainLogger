<ContentDialog x:Name="MedicationDialog"
    x:Class="PainLogger.UniversalApp.Views.MedicationProperties"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PainLogger.UniversalApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Medication"
    PrimaryButtonText="Save"
    SecondaryButtonText="Cancel"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick" 
               Height="640" MinHeight="200" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto">

    <StackPanel VerticalAlignment="Top" Margin="0,0,0,0">

        <ComboBox x:Name="comboBox" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <TextBlock x:Name="LblDosage" HorizontalAlignment="Left" Margin="0,0,0,0" TextWrapping="Wrap" Text="Dosage" VerticalAlignment="Top"/>
        <TextBox Name="tbxDosage" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" />

    </StackPanel>

</ContentDialog>
